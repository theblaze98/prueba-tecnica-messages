	"main": "index.js",
	"scripts": {
		"dev": "concurrently \"yarn watch-compile\" \"yarn watch-dev\"",
		"watch-compile": "swc src -w --out-dir dist",
		"watch-dev": "nodemon --env-file .env --watch \"dist/**/*\" -e js ./dist/src/index.js",
		"build": "swc src -d dist",
		"start": "node dist/src/index.js",
		"tsc": "tsc",
		"test": "echo \"Error: no test specified\" && exit 1",
		"generate:migrate": "drizzle-kit generate --config=src/config/drizzle.config.ts",
		"push": "drizzle-kit push --config=src/config/drizzle.config.ts"
	},
